bindsym $mod+space exec rofi -show drun
bindsym $mod+period exec rofimoji
bindsym $mod+c exec rofi -modi "calc:/home/praharsh/.config/rofi/scripts/rofi-calc.sh" -show calc
bindsym $mod+Escape exec rofi -modi "power:/home/praharsh/.config/rofi/scripts/rofi-power-menu.sh" -show power
bindsym $mod+Shift+a exec "/home/praharsh/.config/rofi/scripts/ai_chat.sh"
bindsym $mod+Shift+m exec "/home/praharsh/.config/rofi/scripts/xrander.sh"
bindsym $mod+Shift+v exec "/home/praharsh/.config/rofi/scripts/rofi-mixer/src/rofi-mixer"

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
